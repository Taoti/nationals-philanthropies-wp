{% block cta %}
<div class="{{ classes }}">
	<div class="cta-inner">

		{% if heading %}
			<h2 class="cta-heading">{{ heading }}</h2>
		{% endif %}

		{% if description %}
			<div class="cta-description">{{ description }}</div>
	    {% endif %}

		{% if button_link.url and button_link.title %}
			<a class="cta-button" href="{{ button_link.url }}" target="{{ button_link.target }}">{{ button_link.title }}</a>
		{% endif %}

	</div>
</div>
{% endblock %}
