{% block hero %}
<div class="{{ classes }}"{% if background_image_url %} data-bg="{{ background_image_url }}"{% endif %}>
	<div class="l-container hero-inner">

		{% if heading_line_1 and heading_line_2 %}
		<h1 class="hero-heading">

			{% if accent_image_1_html %}
			{{ accent_image_1_html }}
			{% endif %}

			<span class="hero-headingLine hero-headingOutline">

				<span class="hero-textWrap">{{ heading_line_1 }}</span>

				{% if accent_image_2_html %}
				{{ accent_image_2_html }}
				{% endif %}

			</span>

			<span class="hero-headingLine">
				<span class="hero-textWrap">{{ heading_line_2 }}</span>
			</span>

		</h1>
		{% endif %}

	</div><!-- END .hero-inner -->
</div><!-- END .hero -->
{% endblock %}
